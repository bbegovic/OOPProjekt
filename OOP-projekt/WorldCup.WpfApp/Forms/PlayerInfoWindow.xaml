<Window x:Class="WorldCup.WpfApp.PlayerInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Info"
        Height="350" Width="300"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Center">
            <Image x:Name="imgPlayer" Width="120" Height="120" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtName" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
            <TextBlock x:Name="txtPosition" FontSize="14" TextAlignment="Center"/>
            <TextBlock x:Name="txtShirtNumber" FontSize="14" TextAlignment="Center"/>
            <TextBlock x:Name="txtCaptain" FontSize="14" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock x:Name="txtGoals" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtYellowCards" FontSize="14" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
