<Window x:Class="WorldCup.WpfApp.TeamInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Info" Height="400" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock x:Name="txtTeamName" FontSize="18" FontWeight="Bold" TextAlignment="Center" Grid.Row="0"/>

        
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock x:Name="txtFifaCode" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtMatches" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtWins" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtDraws" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtLosses" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtGoalsFor" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtGoalsAgainst" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="txtGoalDifference" FontSize="14" Margin="0,5"/>
            
            <TextBlock x:Name="txtOtherStats" FontSize="14" Margin="0,5"/>
        </StackPanel>

        
        <Button Content="Zatvori" Width="100" HorizontalAlignment="Right" Grid.Row="2" Click="BtnClose_Click"/>
    </Grid>
</Window>
