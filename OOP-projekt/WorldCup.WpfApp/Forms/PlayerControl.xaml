<UserControl x:Class="WorldCup.WpfApp.Controls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="100">

    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5" Background="LightBlue" Cursor="Hand">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <Image x:Name="imgPlayer" Width="50" Height="50" Margin="0,0,0,5"/>
            <TextBlock x:Name="txtNumber" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock x:Name="txtName" FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
